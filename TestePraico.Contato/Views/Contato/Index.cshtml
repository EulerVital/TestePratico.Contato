@model TestePraico.Contato.ViewModel.ContatoViewModel

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper-kallas">
    <section class="content-header">
        <div class="row mb-2">
            <div class="col-sm-12 col-md-6">
                <h1>Contato</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Novo Contato</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                    <i class="fas fa-expand"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <form method="post" action="Contato/Index">
                                        <div class="form-group row">
                                            <label class="col-md-2 col-sm-12">Nome: </label>
                                            <div class="col-md-10 col-sm-12">
                                                <input type="text" name="Contato.Nome" class="form-control" required title="Preencha o campo nome" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-2 col-sm-12">Telefone Res: </label>
                                            <div class="col-md-10 col-sm-12">
                                                <input type="text" name="Contato.TelefoneResidencial" class="form-control tel-mask" required title="Preencha o campo Telefone Res." />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-2 col-sm-12">Celular: </label>
                                            <div class="col-md-10 col-sm-12">
                                                <input type="text" name="Contato.Celular" class="form-control tel-mask" />
                                            </div>
                                        </div>
                                        <div class="col-md-12 mt-2">
                                            <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-save"></i> Adicionar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">

                    <div class="card card-outline card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Contatos adicionados</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                    <i class="fas fa-expand"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-condensed table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nome</th>
                                            <th>Telefone Res.</th>
                                            <th>Celular</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.List)
                                        {
                                            <tr>
                                                <td>@item.Nome</td>
                                                <td>@item.TelefoneResidencial</td>
                                                <td>@item.Celular</td>
                                                <td><a href="Contato/Excluir?id=@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

